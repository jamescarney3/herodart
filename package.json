{
  "name": "herodart",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "pnpm run lint:app && pnpm run lint:styles",
    "lint:app": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:app:fix": "prettier . --write && eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "lint:styles": "stylelint **/*.{css,scss}",
    "lint:styles:fix": "stylelint --fix **/*.{css,scss}",
    "preview": "vite preview",
    "test": "vitest",
    "test:nyan": "vitest --reporter=vitest-nyancat-reporter",
    "test:verbose": "vitest --reporter=verbose",
    "test:coverage": "vitest run --coverage --coverage.include=\"src\" --coverage.exclude=\"src/main.tsx\" --coverage.exclude=\"**/*.d.ts\""
  },
  "dependencies": {
    "prettier": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@testing-library/react": "^16.0.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "@vitest/coverage-v8": "^2.0.5",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "jsdom": "^24.1.0",
    "postcss": "^8.4.38",
    "sass": "^1.77.8",
    "sass-tailwind-functions": "^2.0.0",
    "stylelint": "^16.8.1",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-scss": "^6.4.1",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.2.2",
    "vite": "4.0.0",
    "vitest": "^2.0.3",
    "vitest-nyancat-reporter": "^1.0.0"
  }
}
